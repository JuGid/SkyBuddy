<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SubscribeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/skybuddy_background_member"
        android:scaleType="centerCrop"
        android:alpha="1" />

    <LinearLayout
        android:id="@+id/linearSignin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="visible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/waivion_logo_transparent"/>

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pseudo"
            android:textAlignment="center"
            android:background="@drawable/background_username_member"
            android:textColor="@color/colorPrimary"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="1"
                android:id="@+id/editTextNom"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom"
                android:textAlignment="center"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:inputType="text"/>
            <EditText
                android:layout_weight="1"
                android:id="@+id/editTextPrenom"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PrÃ©nom"
                android:textAlignment="center"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:inputType="text"/>
        </LinearLayout>

        <EditText
            android:id="@+id/editTextPassword"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/editTextverifyPassword"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe (verif.)"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/editTextEmail"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:textAlignment="center"
            android:background="@drawable/background_password_member"
            android:textColor="@color/colorPrimary"
            android:inputType="numberDecimal"/>
        <Button
            android:id="@+id/btn_subscribe"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S'inscrire"
            android:textColor="@color/white"
            android:background="@drawable/background_signin_member"/>
    </LinearLayout>
</RelativeLayout>